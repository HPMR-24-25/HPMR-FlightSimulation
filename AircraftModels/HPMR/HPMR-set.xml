<PropertyList>

    <sim>
        <description>WPI Defense Dome</description>

        <flight-model>network</flight-model>

        <model>
            <path>Aircraft/HPMR/Models/HPMR.xml</path>
        </model>
        <sound>
            <path>Aircraft/HPMR/Sounds/hpmr-sound.xml</path>
        </sound>
        <systems>
            <electrical>
                <path>Aircraft/Generic/generic-electrical.xml</path>
            </electrical>
        </systems>
        <!-- The following piece of code sets the default view as the chase view -->
        <current-view>
            <view-number type="int">2</view-number>
        </current-view>

    </sim>

</PropertyList>
